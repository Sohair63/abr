<div class="row">
  <div class="col-xs-8">
    <h4><%= report.company_name %></h4>
  </div>
  <div class="col-xs-4">
    <h4 class="text-right">Price: <span style="color: green"><%= number_to_currency order_item.unit_price %></span></h4>
    <div class="row">
      <div class="col-xs-4">
        <%= hidden_field_tag :report_id, value: report.id %>
      </div>
      <div class="col-xs-8 text-right">
        <div class="btn-group">
          <%= link_to "Delete", order_item, { data: { confirm: "Are you sure you wish to delete the report from your cart?" }, method: :delete, remote: true, class: "btn btn-danger" } %>
        </div>
      </div>
    </div>
  </div>
</div>
